---
import { count, increment, decrement } from '@stores/counterStore';
---

<div class="rounded-lg bg-purple-100 p-4 shadow-md">
  <h2 class="mb-2 text-xl font-bold text-purple-800">Astro Counter</h2>
  <p id="astroCount" class="mb-4 text-2xl font-semibold text-purple-600">{count.get()}</p>
  <div class="flex space-x-2">
    <button
      id="astroDecrement"
      class="rounded bg-purple-500 px-4 py-2 text-white transition-colors hover:bg-purple-600"
    >
      -
    </button>
    <button
      id="astroIncrement"
      class="rounded bg-purple-500 px-4 py-2 text-white transition-colors hover:bg-purple-600"
    >
      +
    </button>
  </div>
</div>

<script>
  import { count, increment, decrement } from '@stores/counterStore';

  const decrementBtn = document.getElementById('astroDecrement');
  const incrementBtn = document.getElementById('astroIncrement');
  const countDisplay = document.getElementById('astroCount');

  decrementBtn?.addEventListener('click', () => {
    decrement();
    updateCount();
  });

  incrementBtn?.addEventListener('click', () => {
    increment();
    updateCount();
  });

  function updateCount() {
    if (countDisplay) {
      countDisplay.textContent = count.get().toString();
    }
  }

  // Subscribe to store changes
  count.subscribe(updateCount);
</script>
