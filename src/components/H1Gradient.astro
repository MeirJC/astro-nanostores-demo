---
import { twMerge } from "tailwind-merge";

interface Props {
  className?: string;
  text?: string;
}

const { className = "", text } = Astro.props;
---

<h1
  class={twMerge(
    "bg-gradient-to-r from-amber-400 via-amber-300 to-yellow-400 bg-clip-text text-transparent text-4xl font-semibold md:text-6xl",
    className
  )}
  set:html={text}
/>
