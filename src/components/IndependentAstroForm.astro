---
import { astroFormState } from '@stores/isoFormStore';
---

<form id="astroIsoForm" class="space-y-4 rounded-lg bg-indigo-100 p-6 text-slate-700 shadow-md">
  <h2 class="mb-4 text-2xl font-bold text-indigo-800">Independent Astro Form</h2>
  <div>
    <label for="astro-iso-firstName" class="block text-sm font-medium text-indigo-700"
      >First Name</label
    >
    <input
      type="text"
      id="astro-iso-firstName"
      name="firstName"
      value={astroFormState.get().firstName}
      class="mt-1 block w-full rounded-md border-indigo-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200"
    />
  </div>
  <div>
    <label for="astro-iso-lastName" class="block text-sm font-medium text-indigo-700"
      >Last Name</label
    >
    <input
      type="text"
      id="astro-iso-lastName"
      name="lastName"
      value={astroFormState.get().lastName}
      class="mt-1 block w-full rounded-md border-indigo-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200"
    />
  </div>
  <div>
    <label for="astro-iso-email" class="block text-sm font-medium text-indigo-700">Email</label>
    <input
      type="email"
      id="astro-iso-email"
      name="email"
      value={astroFormState.get().email}
      class="mt-1 block w-full rounded-md border-indigo-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200"
    />
  </div>
  <div>
    <label for="astro-iso-password" class="block text-sm font-medium text-indigo-700"
      >Password</label
    >
    <input
      type="password"
      id="astro-iso-password"
      name="password"
      value={astroFormState.get().password}
      class="mt-1 block w-full rounded-md border-indigo-300 shadow-sm focus:border-indigo-500 focus:ring focus:ring-indigo-200"
    />
  </div>
  <div class="flex items-center">
    <input
      type="checkbox"
      id="astro-iso-agreeTerms"
      name="agreeTerms"
      checked={astroFormState.get().agreeTerms}
      class="h-4 w-4 rounded border-indigo-300 text-indigo-600 focus:ring-indigo-500"
    />
    <label for="astro-iso-agreeTerms" class="ml-2 block text-sm text-indigo-700"
      >I agree to the terms and conditions</label
    >
  </div>
</form>

<script>
  import { astroFormState } from '@stores/isoFormStore';

  const form = document.getElementById('astroIsoForm');

  form?.addEventListener('input', (event) => {
    const target = event.target as HTMLInputElement;
    const { name, value, type, checked } = target;
    astroFormState.set({
      ...astroFormState.get(),
      [name]: type === 'checkbox' ? checked : value,
    });
  });

  astroFormState.subscribe((state) => {
    Object.entries(state).forEach(([key, value]) => {
      const element = document.getElementById(`astro-iso-${key}`) as HTMLInputElement;
      if (element) {
        if (element.type === 'checkbox') {
          element.checked = value as boolean;
        } else {
          element.value = value as string;
        }
      }
    });
  });
</script>
