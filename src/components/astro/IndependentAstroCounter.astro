---
import { astroCount } from '@stores/isoCounterStore.ts';
---

<div class="rounded-lg bg-astro-100 p-4 shadow-md">
  <h2 class="mb-4 text-center text-2xl font-bold text-astro-800">Independent Astro Counter</h2>
  <div class="flex items-center justify-center gap-6 text-3xl font-semibold">
    <button
      id="astroDecrement-iso"
      class="rounded bg-astro-500 px-4 py-2 text-white transition-colors hover:bg-astro-600"
    >
      -
    </button>
    <p id="astroCount-iso" class="text-astro-600">{astroCount.get()}</p>

    <button
      id="astroIncrement-iso"
      class="rounded bg-astro-500 px-4 py-2 text-white transition-colors hover:bg-astro-600"
    >
      +
    </button>
  </div>
</div>

<script>
  import { astroCount, astroIncrement, astroDecrement } from '@stores/isoCounterStore.ts';

  const decrementBtn = document.getElementById('astroDecrement-iso');
  const incrementBtn = document.getElementById('astroIncrement-iso');
  const countDisplay = document.getElementById('astroCount-iso');

  decrementBtn?.addEventListener('click', () => {
    astroDecrement();
    updateCount();
  });

  incrementBtn?.addEventListener('click', () => {
    astroIncrement();
    updateCount();
  });

  function updateCount() {
    if (countDisplay) {
      countDisplay.textContent = astroCount.get().toString();
    }
  }

  // Subscribe to store changes
  astroCount.subscribe(updateCount);
</script>
